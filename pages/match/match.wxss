.top {
  padding-top: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 2px solid #888888;
  font-size: 30px;
  color: green;
}

.suibian {
  padding-top: 10px;
  display: flex;
  flex-direction: row;
}

.player {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 100%;
}

.pname {
  text-align: center;
}

.touxiang {
  margin-left:50px;
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.pscore {
  text-align: center;
  font-size: 50px;
  color: red;
}

.technical {
  display: flex;
  flex-direction:column;
  width: 180px;
  height: 300px;
  justify-content: space-around;
}

.technical_ {
  display: flex;
  flex-direction:row;
  width: 100%;
  justify-content: space-around;
}

.score {
  padding-top: 10px;
}

.quarter {
  padding-top: 10px;
  color: blue;
}

.name-vs {
  display: flex;
  flex-direction: row;
}

.vs {
  text-align: center;
  margin-top: 60px;
  color: red;
  font-family: LiSu;
}

.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
    font-size: 70%;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #69f;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  font-size: 70%;
}

.radio {
  display: flex;
  flex-direction:row;
  flex-wrap:wrap;
}

.radio > view {
  width: 50%;
  display: flex;
  flex-direction:row;
  justify-content: center;
  padding-top:10px; 
}

.alive {
  color: red;
}
